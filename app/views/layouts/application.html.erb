<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title><%= yield :title %></title>

    <%#= favicon_link_tag "/favicon-32x32.png" %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous"/>
    <script defer src="//use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc" crossorigin="anonymous"></script>
    <script defer src="//cdn.ckeditor.com/ckeditor5/34.1.0/classic/ckeditor.js"></script>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body data-controller="<%= controller_name %>" data-action="<%= action_name %>">

    <% unless controller_name == "contestants" && ["show", "new"].include?(action_name) %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container container-fluid">
          <%= link_to '#', root_url, class: "navbar-brand" %>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <% if user_signed_in? %>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
              <div class="navbar-nav" style="margin-left: -92.61px;">
                <%= link_to 'Dashboard', campaigns_url, class: "nav-link active text-uppercase" %>
                <%= link_to 'Account', edit_user_registration_path, class: "nav-link active text-uppercase" %>
                <%= link_to 'Sign out', destroy_user_session_path, class: "nav-link active text-uppercase", data: { turbo_method: :delete } %>
              </div>
            </div>
          <% else %>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
              <div class="navbar-nav" style="margin-left: -92.61px;">
                <%= link_to 'Home', root_url, class: "nav-link active text-uppercase" %>
                <%= link_to 'Sign up', new_user_registration_path, class: "nav-link active text-uppercase" %>
                <%= link_to 'Sign in', new_user_session_path, class: "nav-link active text-uppercase" %>
              </div>
            </div>
          <% end %>
        </div>
      </nav>
    <% end %>

    <%# if notice %>
      <!-- <div class="alert alert-success" role="alert"> -->
        <%#= notice %>
      <!-- </div> -->
    <%# end %>

    <%# if alert %>
      <!-- <div class="alert alert-danger" role="alert"> -->
        <%#= alert %>
      <!-- </div> -->
    <%# end %>

    <%= yield %>
  </body>
</html>
