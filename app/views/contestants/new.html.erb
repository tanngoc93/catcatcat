<% content_for :title do %>
  <%= @campaign.title %> - <%= @campaign.offered_by_name %>
<% end %>

<% content_for :facebook_properties do %>
  <meta property="og:url"           content="<%= root_url.chomp("/") + contestant_register_path(@campaign) %>" />
  <meta property="og:type"          content="website" />
  <meta property="og:title"         content="<%= @campaign.title %>" />
  <meta property="og:description"   content="<%= @campaign.description %>" />
  <meta property="og:image"         content="" />
<% end %>

<div class="page-width page-width--narrow card mx-auto" style="max-width: 72.5rem; margin: 25px 0; box-shadow: 0 10px 25px 0 rgb(99 123 173 / 20%); border-radius: 20px;">
  <% if @campaign.images.size > 0 %>
    <div id="carouselGiveaway" class="carousel slide" data-bs-ride="carousel" style="height: 350px">
      <div class="carousel-inner">
        <% @campaign.images.each_with_index do |image, index| %>
          <div class="carousel-item <%= index === 0 ? "active" : nil %>">
            <div class="d-block w-100" style="z-index: 99; height: 300px; border-radius: 20px 20px 0 0; background-image: url(<%= url_for(image.data) %>); background-repeat: no-repeat; background-position: top center; background-size: cover;">
            </div>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselGiveaway" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselGiveaway" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
      </button>
    </div>
  <% end %>
  <div class="card-body" style="box-shadow: 0 10px 35px 0 rgb(99 123 173 / 20%); margin: <%= @campaign.images.size > 0 ? "-65px 0 0 0" : "0" %>; padding: 35px 44px; border-radius: 20px; background-color: #FFF; z-index: 9999;">
    <% unless @campaign.campaign_time_out? %>
      <h1 class="card-title mb-4 text-center"><%= @campaign.title %></h1>
      <div class="hr-title h6">
        <div>TIME LEFT</div>
      </div>
      <div class="d-flex text-center align-items-center basic-info">
        <div class="col-6 col-sm-2 col-md-3 h6 order-2 order-sm-1 basic-b">VALUE: $<%= "%.2f" % @campaign.winner_prize_value.round(2) %></div>
        <div class="col-12 col-sm-7 col-md-6 order-1 order-sm-2 hr-b-small">
          <div class="time-left d-flex justify-content-center" id="countdown">
            <div class="time-unity">
              <span id="countdown-days" style="font-weight: bold;">*</span><br><span class="label">DAYS</span>
            </div>
            <div>:</div>
            <div class="time-unity">
              <span id="countdown-hours" style="font-weight: bold;">*</span><br><span class="label">HOURS</span>
            </div>
            <div>:</div>
            <div class="time-unity">
              <span id="countdown-minutes" style="font-weight: bold;">*</span><br><span class="label">MIN</span>
            </div>
            <div>:</div>
            <div class="time-unity">
              <span id="countdown-seconds" style="font-weight: bold;">*</span><br><span class="label">SEC</span>
            </div>
          </div>
        </div>
        <div class="col-6 col-sm-2 col-md-3 h6 order-3 basic-b">WINNERS: <%= @campaign.number_of_winners %></div>
      </div>
    <% end %>  
    <% if @campaign.campaign_time_out? %>
      <h1 class="card-title mb-4 text-center" style="margin-top: 1.2rem;">Oops, The Giveaway Has Ended</h1>
    <% else %>
      <div class="hr-arrow-down"></div>
      <div class="mb-3" style="margin-top: 1rem;">
        <p class="text-center"><b>Enter with your email address or facebook:</b></p>
      </div>
      <div class="register-form mx-auto" style="max-width: 440px; margin: 1rem 0;">
        <%= form_with(model: @contestant, url: contestant_register_path(@campaign), id: "contestant-register-form", class: "needs-validation", local: false) do |form| %>
          <div class="">
            <div class="input-group has-validation">
              <%= form.text_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
              <%= form.submit "ENTER", id: "contestant-btn", class: "btn btn-success", disabled: true %>
              <div class="invalid-feedback">
                Your have entered an invalid e-mail address!
              </div>
            </div>
          </div>
          <p class="text-muted mt-3" style="text-align: center;">
            <label class="form-check-label">
            <input class="form-check-input mr-2" type="checkbox"required=""> <small>I consent to getting sale, promotion, or marketing email*</small>
            </label> 
          </p>
        <% end %>
      </div>
    <% end %>
    <div class="hr-top mt-5"></div>
    <div class="pt-4 pb-5"><%= @campaign.description.html_safe %></div>
    <p class="divider-text">
      <span class="bg-light"> OFFERED BY: </span>
    </p>
    <div class="row mb-3" style="padding-top: 15px;">
      <div class="d-flex flex-wrap justify-content-center">
        <div class="mx-3"><small title="America/New_York"><span class="h6">Giveaway Timezone: <%= @campaign.timezone || "UTC" %></span></small></div>
        <div class="mx-3"><small><span class="h6">Offered By: </span> <%= link_to @campaign.offered_by_name.upcase, @campaign.offered_by_url, target: "blank" %></small></div>
      </div>
    </div>
    <p class="divider-text-footer">
      <span class="bg-light">Enter sweepstakes and receive exclusive offers from <%= @campaign.offered_by_name %>. Unsubscribe anytime.<br /><a href="#">Read official rules.</a></span>
    </p>
  </div>
</div>
